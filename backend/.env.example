# Archivo de configuración de variables de ambiente
# Copia este archivo a .env y modifica los valores

# Ambiente (development, production, testing)
FLASK_ENV=development

# Clave secreta para sesiones (cambiar en producción)
SECRET_KEY=your-super-secret-key-change-this-in-production

# URL de la base de datos (por defecto SQLite)
DATABASE_URL=sqlite:///users.db

# Para producción con PostgreSQL:
# DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/infracciones

# Para producción con MySQL:
# DATABASE_URL=mysql+pymysql://usuario:contraseña@localhost:3306/infracciones

# Host y puerto de la aplicación
FLASK_HOST=localhost
FLASK_PORT=5000

# Debug mode (False en producción)
DEBUG=True
